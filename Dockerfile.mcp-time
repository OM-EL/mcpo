FROM python:3.9-slim

WORKDIR /app

# Install dependencies
COPY requirements.txt .
RUN pip install --no-cache-dir -r requirements.txt

# Copy application code
COPY . .

# Expose the port
EXPOSE 9000

# Default command
CMD ["uvicorn", "mcp_server_time:app", "--host", "0.0.0.0", "--port", "9000", "--log-level", "info"]
